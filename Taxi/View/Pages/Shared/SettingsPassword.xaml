<Page x:Class="Taxi.View.Pages.Shared.SettingsPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taxi.View.Pages.Shared"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPassword">

    <StackPanel>
        <Label >Смена пароля</Label>
        <GroupBox Header="Старый пароль">
            <TextBox x:Name="oldPass"/>
        </GroupBox>
        <GroupBox Header="новый пароль">
            <TextBox x:Name="newPass"/>
        </GroupBox>
        <GroupBox Header="повтор пароля">
            <TextBox x:Name="ReplayPass"/>
        </GroupBox>
    </StackPanel>
</Page>
